<div class="container">
    <h1>Handlebars Features</h1>

    <h1>If Example</h1>
    {{#if title}}
    <h2>{{title}}</h2>
    {{else}}
    <p>{{name}}</p>
    {{/if}}

    <h1>Unless Example</h1>
    {{#unless age}}
    <h3>I don't know your age</h3>
    {{else}}
    <h3>Your age is {{age}}</h3>
    {{/unless}}


    <h1>Each Example</h1>

    <ul>
        {{#each interests}}
        <li>{{this}}</li>
        {{else}}
        <li>No interests</li>
        {{/each}}
    </ul>

    <h1>With Example</h1>
    <address>
        {{#with address}}
        <p>{{street}}</p>
        <p>{{suite}}</p>
        <p>{{city}}</p>
        <p>{{zipcode}}</p>
            {{#with geo}}
                <span>{{lat}},</span>
                <span>{{lng}}</span>
            {{/with}}
        {{/with}}
        
    </address>
</div>